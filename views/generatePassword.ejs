<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/header') %>
</head>
<body>
  <header>
    <%- include('partials/nav') %>
  </header>
  <main>
    <h1>Generate New Password</h1>
    <form id="generate-password-form" action="/generate-password" method="POST">
      <label for="length">Password Length</label>
      <input type="number" id="length" name="length" min="6" max="128" required>
      <label><input type="checkbox" name="lowercase"> Include Lowercase Letters</label>
      <label><input type="checkbox" name="uppercase"> Include Uppercase Letters</label>
      <label><input type="checkbox" name="numbers"> Include Numbers</label>
      <label><input type="checkbox" name="symbols"> Include Symbols</label>
      <button type="submit">Generate Password</button>
    </form>
  </main>
  <%- include('partials/footer') %>
  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/passwordGenerator.js"></script>
</body>
</html>
